<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @transaction.name %>
</p>

<% @transaction.spendings.each do |spending| %>
	<p>
		<%= spending.person.name %> <%= spending.amount %>
	</p>
<% end %>

<%= link_to 'Back', event_path(@transaction.event) %>
<%= link_to 'Edit', edit_details_transaction_path(@transaction) %>
<%= link_to 'Delete', @transaction, method: :delete, data: { confirm: 'Are you sure?' } %>