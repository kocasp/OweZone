<%= form_tag(update_details_transaction_path(@transaction), method: "post") do %>
  <% @people.each_with_index do |person, index| %>
  	<%= check_box_tag 'debt_ids[]', person.id, @old_debt_ids.include?(person.id)  %> 
  	<%= person.name %> 
  	<%= text_field_tag "amounts[#{person.id}]", @old_amounts[person.id]  %>
  	<br/>
  <% end %>
  <%= submit_tag("Save details") %>
<% end %>