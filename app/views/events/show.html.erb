<script type="text/javascript">
$(window).load(function(){
    
    $('.people_first').tooltip();
    $('.takes_part').tooltip();
    $('.no_people').popover('show');
   function jumpingPop() {
      $(".popover.top.in")
               .animate({"top":"-=20px"},900)
               .animate({"top":"+=20px"},900,jumpingPop)
   }

  jumpingPop();
});



</script>