= render :partial => '/layouts/top_menu'
%br/
.col-md-4.col-md-offset-4
  = form_for @event, :html => { :class => 'form-horizontal' } do |f|
    .form-group
      = f.text_field :name, class: "form-control input-lg", placeholder: "Event name"
    .form-group
      .row
        .col-md-6
          = f.submit "Save", class: "btn btn-primary btn-lg btn-block"
        .col-md-6
          %a.btn.btn-default.btn-lg.btn-block{:href => event_path(@event), :role => "button"} Cancel