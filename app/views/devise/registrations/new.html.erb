<style type="text/css">
@import url(http://fonts.googleapis.com/css?family=Antic+Slab);

html,body {
	height:100%;
	margin-top: 0px;
}

h1 {
	font-family: 'Titillium Web', sans-serif;
	font-size:80px;
	color:#ffffff;
}

.lead {
	color:#ffffff;
}


/* Custom container */
.container-full {
	margin: 0 auto;
	width: 100%;
	min-height:100%;
	background-color: #1a4055;
	color:#eee;
	overflow:hidden;
}
.sliding_background{
	position: absolute;
	background:url(<%= asset_path 'background.jpg' %>) repeat-x;
	height: 315px;
	width: 100%;
}
.container-full a {
	color:#efefef;
	text-decoration:none;
}

.v-center {
	margin-top:7%;
}

</style>
<div class="sliding_background">&nbsp</div>

<div class="container-full">

	<div class="row">

		<div class="col-lg-12 text-center v-center">

			<p><%= image_tag "logo.png" %></p>


			<br><br>


			<div class="col-md-4 col-md-offset-4">
				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
				<div class="form-group">
					<%= f.email_field :email, class: "form-control input-lg", :autofocus => true, placeholder: "Enter your email" %>
				</div>
					<div class="form-group">
						<%= f.password_field :password, class: "form-control input-lg", placeholder: "Enter your password" %>
					</div>

						<div class="form-group">
							<%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "Confirm password" %>
						</div>

						<div class="form-group"><%= f.submit "Create account", class: "btn btn-success btn-lg btn-block" %></div>

						<% end %>
					</div>
				</div>

			</div> <!-- /row -->


			<br><br><br><br><br>

		</div> <!-- /container full -->

		



		<script type='text/javascript' src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>


		<script type='text/javascript' src="http://netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>




		<!-- JavaScript jQuery code from Bootply.com editor -->

		<script type='text/javascript'>

		$(document).ready(function() {

		function animateBackground(){
				$('.sliding_background').animate({
			  'background-position-x': '+=839',
			}, 30000, 'linear', animateBackground );
			}

			animateBackground();

		});

		</script>
